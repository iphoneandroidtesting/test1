<?xml version="1.0" encoding="utf-8"?>
<com.nmotion.android.view.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp" >
    <CheckBox
        android:id="@+id/chk_credit_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:duplicateParentState="true"
        android:focusable="false"
        android:visibility="invisible" />
    <TextView
        android:id="@+id/txt_card_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:text="aaaa"
        android:textColor="@color/black"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/txt_card_number"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableRight="@drawable/arrow_right"
        android:gravity="right|center_vertical"
        android:text="5555 5555 5555 5555"
        android:textColor="@color/black" />
</com.nmotion.android.view.CheckableLinearLayout>