<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/txt_restaurant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Sushi Restaurant" />

    <TextView
        android:id="@+id/txt_restaurant_meal_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_restaurant_name"
        android:text="Shumai"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_restaurant_meal_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_restaurant_meal_name"
        android:text="Steamed shrimp dumplings with ginger ponzu\n\n6 pieces\nMedium\nStandard" />

    <TextView
        android:id="@+id/txt_restaurant_meal_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txt_restaurant_meal_description"
        android:text="$ 22.95" />

    <TextView
        android:id="@+id/txt_restaurant_meal_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_restaurant_meal_quantity_plus"
        android:layout_below="@+id/txt_restaurant_meal_price"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="01"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_restaurant_meal_quantity_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_restaurant_meal_quantity_plus"
        android:layout_below="@+id/txt_restaurant_meal_price"
        android:layout_toLeftOf="@+id/txt_restaurant_meal_quantity"
        android:gravity="center"
        android:text="Quantity" />

    <Button
        android:id="@+id/btn_restaurant_meal_quantity_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_restaurant_meal_price"
        android:layout_toRightOf="@+id/txt_restaurant_meal_quantity"
        android:background="@drawable/plus" />

    <Button
        android:id="@+id/btn_restaurant_meal_quantity_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_restaurant_meal_price"
        android:layout_toRightOf="@+id/btn_restaurant_meal_quantity_plus"
        android:background="@drawable/minus" />

</RelativeLayout>