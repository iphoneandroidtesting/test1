<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/quantity_block_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:padding="10dp" >

    <TextView
        android:id="@+id/txt_restaurant_meal_quantity_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/txt_quantity" />

    <TextView
        android:id="@+id/txt_restaurant_meal_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/btn_restaurant_meal_quantity_plus"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/gray_red_btn_background_selector"
        android:onClick="onPlusClick"
        android:text="+"
        android:textSize="20sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/btn_restaurant_meal_quantity_minus"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/gray_red_btn_background_selector"
        android:onClick="onMinusClick"
        android:text="-"
        android:textSize="20sp"
        android:textStyle="bold" />
</LinearLayout>