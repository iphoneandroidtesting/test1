<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="10dp" >

    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/txt_your_credit_card"
        android:textSize="16sp" />

    <View
        android:id="@+id/separator1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:background="#50000000" />

    <TextView
        android:id="@+id/title2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/separator1"
        android:text="@string/txt_card_title" />

    <EditText
        android:id="@+id/edt_card_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title2"
        android:maxLength="12"
        android:singleLine="true" />

    <TextView
        android:id="@+id/txt_card_number_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_card_title"
        android:layout_marginTop="5dp"
        android:text="@string/txt_card_number" />

    <TextView
        android:id="@+id/txt_card_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txt_card_number_title"
        android:layout_marginBottom="5dp"
        android:text="@string/txt_card_number" />
    <Button
        android:id="@+id/btn_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/gray_red_btn_background_selector"
        android:text="@string/txt_edit_and_save" />
</RelativeLayout>